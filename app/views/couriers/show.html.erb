<h1>
  Courier <%= @courier.name %>
  <%= link_to bi_icon('pencil', text: 'Edit'), edit_courier_path, class: 'btn btn-primary float-end' %>
</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= @courier.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= @courier.email %></td>
  </tr>
</table>
<div class="card card-body">
  <%= render partial: 'packages/form', locals: { courier: @courier, package: @package } %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Tracking Number</th>
      <th>Delivery Status</th>
    </tr>
  </thead>
  <tbody>
    <%= render @courier.packages.where.not(id: nil) %>
  </tbody>
</table>
