<h3 class="mb-4">New Package Form</h3>
<p class="text-muted">A unique Tracking Number will be generated automatically and Delivery Status will by set 'false' by default.</p>
<%= form_with(model: [courier, package], local: true) do |form| %>
  <%= form.hidden_field :courier_id, value: courier.id %>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
